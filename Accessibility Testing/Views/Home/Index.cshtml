@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <!-- Add the pickadate.default.css file -->
    <link rel="stylesheet" href="~/Scripts/LightweightDateInputPicker/lib/themes/default.css">
    <link rel="stylesheet" href="~/Scripts/LightweightDateInputPicker/lib/themes/default.date.css">
    <link rel="stylesheet" href="~/Scripts/LightweightDateInputPicker/lib/themes/rtl.css">
</head>
<body>
    <div class="text-center">
        <h1>Default HTML 5 date picker</h1>
        <input type="datetime-local" id="datetimePicker">
        
        <h1>pickadate</h1>
        <input id="exampleDate" class="datepicker" name="date" type="text" value="14 August, 2023" data-value="2023-08-08" />
        
        <h1>Jquery-datetimepicker</h1>
        <p><input id="datetimepicker" type="text" value="2024/03/15 05:06" /></p>

        <h1>daterangepicker</h1>
        <input id="date-range2" size="40" value="2023-10-01 to 2023-11-04">

        <h1>tempus-dominus</h1>
        <div class="input-group"
                id="datetimepicker1"
                data-td-target-input="nearest"
                data-td-target-toggle="nearest">
            <input id="datetimepicker1Input"
                    type="text"
                    class="form-control"
                    data-td-target="#datetimepicker1" />
            <span class="input-group-text"
                    data-td-target="#datetimepicker1"
                    data-td-toggle="datetimepicker">
                <span class="fas fa-calendar"></span>
            </span>
        </div>

        <h1>tui-date-picker</h1>
        <div class="tui-datepicker-input tui-datetime-input tui-has-focus">
            <input type="text" id="tui-date-picker-target" aria-label="Date-Time" />
            <span class="tui-ico-date"></span>
        </div>
        <div id="tui-date-picker-container" style="margin-top: -1px;"></div>
    </div>
    <div style="width: 100%; height: 300px;"></div>
</body>
</html>

@section scripts{
    <!-- Lightweight date time picker scripts -->
    <script src="~/Scripts/LightweightDateInputPicker/lib/picker.js"></script>
    <script src="~/Scripts/LightweightDateInputPicker/lib/picker.date.js"></script>
    <script src="~/Scripts/LightweightDateInputPicker/lib/picker.time.js"></script>
    <script src="~/Scripts/LightweightDateInputPicker/lib/translations/lv_LV.js"></script>
    <script src="~/Scripts/LightweightDateInputPicker/lib/legacy.js"></script>
    <!-- Clean jQuery Date and Time Picker Plugin - datetimepicker -->
    <link rel="stylesheet" href="~/lib/jquery-datetimepicker/jquery.datetimepicker.css"/>
    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.js"></script>
    <!-- range picker -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <!--Tempus Dominus-->
    <!-- Popperjs -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <!-- Tempus Dominus JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.9.4/dist/js/tempus-dominus.min.js" crossorigin="anonymous"></script>
    <!-- Tempus Dominus Styles -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/solid.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/fontawesome.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.9.4/dist/css/tempus-dominus.min.css" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.16/dist/js/tempus-dominus.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.16/dist/js/jQuery-provider.js"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.16/dist/css/tempus-dominus.css" />

    <!-- TUI -->
    <link rel="stylesheet" href="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.css" />
    <script src="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.js"></script>

    <script type="text/javascript">
        // Initialize pickadate after all the necessary scripts have loaded
        $(document).ready(function () {
            $('.datepicker').pickadate();
        });

        $('#datetimepicker').datetimepicker();

        $('#date-range2').daterangepicker();

        $('#datetimepicker1').tempusDominus({
            //put your config here
        });


        const DatePicker = tui.DatePicker;
        const container = document.getElementById('tui-date-picker-container');
        const target = document.getElementById('tui-date-picker-target');

        const instance = new DatePicker(container, {
            input: {
                element: target
            },
        });

        instance.getDate();
    </script>
}